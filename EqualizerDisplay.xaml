                <Style TargetType="{x:Type Label}">
                    <Setter Property="FontSize"
                            Value="6.5" />
                    <Setter Property="Foreground"
                            Value="{StaticResource InterfaceGold}" />
                </Style>
            </Grid.Resources>
            <Label Margin="0"
                   HorizontalContentAlignment="Right"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Width="30">0dB</Label>
            <Rectangle Width="6"
                       Height="1"
                       Fill="{DynamicResource InterfaceGold}"
                       HorizontalAlignment="Right"
                       Margin="0,-84,6,0"
                       VerticalAlignment="Center" />
            <Rectangle Width="6"
                       Height="1"
                       Fill="{DynamicResource InterfaceGold}"
                       HorizontalAlignment="Right"
                       Margin="0,-42,6,0"
                       VerticalAlignment="Center" />
            <Rectangle Width="6"
                       Height="1"
                       Fill="{DynamicResource InterfaceGold}"
                       HorizontalAlignment="Right"
                       Margin="0,0,6,0"
                       VerticalAlignment="Center" />
            <Rectangle Width="6"
                       Height="1"
                       Fill="{DynamicResource InterfaceGold}"
                       HorizontalAlignment="Right"
                       Margin="0,42,6,0"
                       VerticalAlignment="Center" />
            <Rectangle Width="6"
                       Height="1"
                       Fill="{DynamicResource InterfaceGold}"
                       HorizontalAlignment="Right"
                       Margin="0,84,6,0"
                       VerticalAlignment="Center" />
            <Label x:Name="LowestDbLabel" Margin="0"
                   HorizontalContentAlignment="Right"
                   VerticalAlignment="Bottom"
                   Width="30"
                   HorizontalAlignment="Right"
                   VerticalContentAlignment="Bottom">-60dB</Label>
        </Grid>
        <WrapPanel Margin="0">
            <WrapPanel.Resources>
                <Style x:Key="bar" TargetType="{x:Type Rectangle}">
                    <Setter Property="Fill"
                            Value="{StaticResource FrequencyBar}" />
                    <Setter Property="Width"
                            Value="9.6" />
                </Style>
                <Style x:Key="peak" TargetType="{x:Type Rectangle}">
                    <Setter Property="Fill"
                            Value="{StaticResource InterfaceGold}" />
                    <Setter Property="Width"
                            Value="9.6" />
                </Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="VerticalAlignment"
                            Value="Bottom" />
                    <Setter Property="Width"
                            Value="9.6" />
                    <Setter Property="Height"
                            Value="{Binding ElementName=spec0, Path=ActualHeight}" />
                    <Setter Property="Margin"
                            Value="8,12,0,0" />
                </Style>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="FontSize"
                            Value="7.5" />
                    <Setter Property="Foreground"
                            Value="{StaticResource InterfaceGold}" />
                </Style>
            </WrapPanel.Resources>
            <Rectangle x:Name="leftBuffer"
                       Width="10"
                       Margin="16,12,0,18"
                       Visibility="Hidden"
                       HorizontalAlignment="Left" />
